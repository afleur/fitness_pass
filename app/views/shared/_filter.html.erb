<div class="illustration">
  <%= image_tag "home-fitness.png", width: 400 %>
</div>
<div class="home-filter">
  <p>Je recherche</p>
  <%= form_tag activities_path, method: :get do %>
    <%= select_tag(:category, options_for_select([
      ['toutes les activités', ''],
      ['du cardio', 'Cardio'],
      ['du renforcement', 'Renforcement'],
      ['des arts martiaux', 'Arts Martiaux'],
      ['Mind & Body', 'Mind & Body'],
      ['de la danse', 'Danse']
    ])) %>

    <%= text_field_tag 'date', nil, class: 'flatpickr-input', placeholder: "#{Date.today}" %>

    <div class="btn-filter fixed-bottom">
      <%= button_tag "voir les résultats" %>
    </div>
  <% end %>
</div>
