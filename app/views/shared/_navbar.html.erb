
<div class="navbar-fixed-bottom navbar">
  <!-- Logo -->
  <div>
    <% if user_signed_in? %>
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "menu-logo-picto.svg" %>
      <% end %>
    <% else %>
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo.svg" %>
      <% end %>
    <% end %>
  </div>

  <!-- Right Navigation -->

  <div>
    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <%= link_to activities_path, class: "navbar-item navbar-link" do %>
        <%= image_tag "menu-calendar-icn.svg" %>
      <% end %>
      <%= link_to bookings_path, class: "navbar-item navbar-link" do %>
        <%= image_tag "menu-bookings-icn.svg" %>
      <% end %>
      <%= link_to allorders_path, class: "navbar-item navbar-link" do %>
        <%= image_tag "menu-credits-icn.svg" %>
      <% end %>
      <%= link_to destroy_user_session_path, method: :delete, class: "navbar-item navbar-link" do %>
        <%= image_tag "menu-logout.svg" %>
      <% end %>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Login", new_user_session_path, class: "navbar-item navbar-link" %>
      <span>|</span>
      <%= link_to "Sign up", new_user_registration_path, class: "navbar-item navbar-link" %>
    <% end %>
  </div>
</div>

